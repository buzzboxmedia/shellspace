<plist version="1.0">
<dict>
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>shellspace</string>
			</array>
			<key>CFBundleURLName</key>
			<string>com.buzzbox.shellspace-ios</string>
		</dict>
	</array>
	<key>NSCameraUsageDescription</key>
	<string>Take photos to send to Claude sessions</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Choose photos to send to Claude sessions</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>Record voice messages to send to Claude sessions</string>
